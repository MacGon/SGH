<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".login.view.LoginActivity" android:background="@drawable/fractal">

    <TextView
            android:text="Bienvenido Manuel"
            android:layout_width="341dp"
            android:layout_height="41dp"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4" android:textSize="32sp"
            android:textStyle="bold" android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintHorizontal_bias="0.425"
            android:textAlignment="textStart"/>
    <EditText
            android:id="@+id/username"
            android:layout_width="344dp"
            android:layout_height="54dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_username"
            android:gravity="center_vertical"
            android:hint="@string/user_name"
            android:inputType="text" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="300dp"
            app:layout_constraintHorizontal_bias="0.45" android:autofillHints=""/>
    <EditText
            android:id="@+id/password"
            android:layout_width="343dp"
            android:layout_height="54dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_password"
            android:gravity="center_vertical"
            android:hint="@string/password"
            android:inputType="textPassword"
            app:layout_constraintTop_toBottomOf="@+id/username" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.495"
            android:autofillHints="" android:layout_marginTop="24dp"/>
    <Button
            android:id="@+id/button"
            android:layout_width="275dp"
            android:layout_height="42dp"
            android:text="Acceder"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/progress"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0" android:background="#EEB042" android:textColor="#F3FCFAFA"
            android:fontFamily="sans-serif-black"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/password" app:layout_constraintHorizontal_bias="0.498"/>
    <ImageView
            android:layout_width="284dp"
            android:layout_height="87dp" app:srcCompat="@drawable/ic_simaht"
            android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" android:contentDescription="@string/todo"
            app:layout_constraintHorizontal_bias="0.496"/>
    <TextView
            android:text="Por favor ingresa tu usuario y contraseÃ±a"
            android:layout_width="337dp"
            android:layout_height="61dp"
            android:id="@+id/textView"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4" android:textSize="24sp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.396"
            android:layout_marginTop="100dp" app:layout_constraintTop_toBottomOf="@+id/imageView"/>
    <ImageView
            android:layout_width="290dp"
            android:layout_height="57dp" app:srcCompat="@drawable/ayuda"
            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/button"
            app:layout_constraintHorizontal_bias="0.666"/>

</androidx.constraintlayout.widget.ConstraintLayout>